{% if front_public_url is defined and front_no_www_public_domain is defined %}
server {
    listen       80;
    server_name  {{ front_no_www_public_domain }};
    return       301 {{ front_public_url }}$request_uri;
}
{% endif %}
server {
    listen      {{ port }};

    {% if proxies is defined %}
    {% for proxy_item in proxies %}
    location ~* ^{{ proxy_item.proxy_route }}/ {
        #Set the header to keep the IP of the client
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

        rewrite ^{{ proxy_item.proxy_route }}/(.*) /$1 break;
        rewrite ^{{ proxy_item.proxy_route }}/ / break;
        proxy_pass {{ proxy_item.proxy_target }};
    }
    {% endfor %}
    {% endif %}

    # http://serverfault.com/questions/649151/nginx-location-regex-doesnt-work-with-proxy-pass

    server_name {{ inventory_hostname }};
    root        /var/www/{{ project_name }}/current/web;

    error_log {{ path_to_nginx_error_log }};
    access_log {{ path_to_nginx_access_log }};

    index app_dev.php;
    try_files $uri @rewrite;

    gzip            on;
    gzip_min_length 1000;
    gzip_comp_level 9;
    gzip_proxied    any;
    gzip_types      application/javascript application/x-javascript application/json text/css;

    add_header X-Robots-Tag "noindex, nofollow";

    location @rewrite {
        rewrite ^/?(.*)$ /app.php/$1 last;
    }

    location ~ ^/(app|app_dev)\.php {
        auth_basic "Restricted";
        auth_basic_user_file /etc/nginx/conf.d/.htpasswd;
        fastcgi_index $1.php;
        fastcgi_pass   unix:/var/run/php5-fpm.sock;
        include fastcgi_params;

        # When you are using symlinks to link the document root to the
        # current version of your application, you should pass the real
        # application path instead of the path to the symlink to PHP
        # FPM.
        # Otherwise, PHP's OPcache may not properly detect changes to
        # your PHP files (see https://github.com/zendtech/ZendOptimizerPlus/issues/126
        # for more information).
        fastcgi_param  SCRIPT_FILENAME  $realpath_root$fastcgi_script_name;
        fastcgi_param DOCUMENT_ROOT $realpath_root;
    }

    location ~* \.(css|txt|xml|js|gif|jpe?g|png|ico)$ {
        expires 1y;
        log_not_found off;
    }
}
