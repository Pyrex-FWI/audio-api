<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link rel="stylesheet"
              href="{{ asset('assets/vendor/bootstrap/dist/css/bootstrap.min.css') }}">

    </head>
    <body>
    <div class="container">
        <div class="row">
            <div>
                {% if app.user is defined and is_granted('ROLE_ADMIN', app.user) %}
                    <ul>
                        <li><a href="{{ path('user_list') }}" >Users list</a></li>
                    </ul>
                {{ dump(app.user) }}
                {% endif %}
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                {% block body %}{% endblock %}
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                footer
            </div>
        </div>
    </div>
        {% block javascripts %}{% endblock %}
    </body>
</html>
